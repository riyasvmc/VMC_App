<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zeefive.vmcapp">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".data.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="Manager 1.0"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.ActivityProject"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ActivityAccount"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ActivityAccountDetail"
            android:parentActivityName=".activity.ActivityAccount" />
        <activity
            android:name=".activity.ActivityShop"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ActivityShopDetail"
            android:parentActivityName=".activity.ActivityShop" />
