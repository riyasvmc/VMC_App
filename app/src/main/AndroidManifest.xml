            android:name=".activity.ActivitySale"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ActivityExpiryDates"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ActivityTools"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ActivityTodo"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ActivityProjectDetail"
            android:parentActivityName=".activity.ActivityProject" />
        <activity
            android:name=".activity.ActivityConcreteCalculator"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ActivityDeviceList"
            android:parentActivityName=".activity.ActivityReceiptPrint" />
        <activity
            android:name=".activity.ActivityReceiptPrint"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AboutActivity" />
    </application>

</manifest>